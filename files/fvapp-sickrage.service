[Unit]
Description=Service for sickrage app

[Service]
ExecStart=/usr/bin/python /apps/sickrage/SickBeard.py -q --daemon --nolaunch --datadir=/apps/sickrage/app-config --config=/apps/sickrage/app-config/config.ini --pidfile=/apps/sickrage/app-config/sickrage.pid
Type=forking
TimeoutSec=200
KillMode=process
Restart=on-failure
Nice=20
User=admin
Group=admin
PIDFile=/apps/sickrage/app-config/sickrage.pid

[Install]
WantedBy=multi-user.target
